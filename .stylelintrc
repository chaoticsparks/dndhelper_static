{
  "plugins": [
    "stylelint-order"
  ],
  "extends": [
    "stylelint-config-recommended-scss",
    "stylelint-config-airbnb",
    "stylelint-config-prettier"
  ],
  "rules": {
    "order/order": [
      "dollar-variables",
      "declarations",
      "at-rules",
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "breakpoint"
      },
      {
        "type": "rule",
        "selector": "^&::(before|after)"
      },
      {
        "type": "rule",
        "selector": "^&:\\w"
      },
      {
        "type": "rule",
        "selector": "^&_"
      },
      "rules"
    ],
    "at-rule-empty-line-before": null
  }
}